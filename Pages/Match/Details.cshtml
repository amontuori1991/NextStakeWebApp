        const playerStatsBaseUrl = '@Url.Page("./Details", null, new { handler = "PlayerStats", id = Model.Data.MatchId })';

        function setText(id, value, isPercent) {
            const el = document.getElementById(id);
            if (!el) return;
            if (value === null || value === undefined) {
                el.textContent = "-";
                return;
            }
            el.textContent = isPercent ? (value + "%") : value;
        }

        function fillSlice(prefix, playerId, slice) {
            if (!slice) return;

            setText(`${prefix}-minutes-${playerId}`,        slice.minutes);
            setText(`${prefix}-rating-${playerId}`,         slice.rating);

            setText(`${prefix}-shotsTotal-${playerId}`,     slice.shotsTotal);
            setText(`${prefix}-shotsOn-${playerId}`,        slice.shotsOn);

            setText(`${prefix}-goalsTotal-${playerId}`,     slice.goalsTotal);
            setText(`${prefix}-assists-${playerId}`,        slice.assists);
            setText(`${prefix}-goalsConceded-${playerId}`,  slice.goalsConceded);
            setText(`${prefix}-goalsSaves-${playerId}`,     slice.goalsSaves);

            setText(`${prefix}-passesTotal-${playerId}`,    slice.passesTotal);
            setText(`${prefix}-passesKey-${playerId}`,      slice.passesKey);
            setText(`${prefix}-passesAccuracy-${playerId}`, slice.passesAccuracy, true);
        }

        document.addEventListener('shown.bs.modal', function (event) {
            const modal = event.target;
            if (!modal.id || !modal.id.startsWith("playerModal-")) return;

            // Evita di ricaricare se già fatto
            if (modal.dataset.statsLoaded === "true") {
                return;
            }

            const playerId = modal.dataset.playerId;
            const teamId   = modal.dataset.teamId;
            const season   = modal.dataset.season;
            const leagueId = modal.dataset.leagueId;

            if (!playerId || !teamId || !season || !leagueId) {
                console.warn("Dati mancanti per il caricamento stats giocatore.", {
                    playerId, teamId, season, leagueId
                });
                return;
            }

            // Se l'URL base ha già una query (es. ?handler=PlayerStats&id=123) usa "&" invece di "?"
            const sep = playerStatsBaseUrl.includes('?') ? '&' : '?';
            const url = `${playerStatsBaseUrl}${sep}playerId=${encodeURIComponent(playerId)}&teamId=${encodeURIComponent(teamId)}&season=${encodeURIComponent(season)}&leagueId=${encodeURIComponent(leagueId)}`;

            console.debug("Carico stats giocatore da:", url);

            fetch(url)
                .then(r => {
                    if (!r.ok) throw new Error("Errore HTTP " + r.status);
                    return r.json();
                })
                .then(data => {
                    // last5
                    if (data.last5) {
                        fillSlice("last5", playerId, data.last5);
                    }

                    // last5Wins
                    if (data.last5Wins) {
                        fillSlice("last5wins", playerId, data.last5Wins);
