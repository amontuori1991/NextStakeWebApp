            <div class="card card-body text-center">
                <api-sports-widget data-type="config"
                                   data-key="9146b11baf44d94af6e14d347213d63a"
                                   data-sport="football"
                                   data-lang="it"
                                   data-theme="grey"
                                   data-show-logos="true">
