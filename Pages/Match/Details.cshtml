                        var aEff  = awayEff       ?? 0m;
                        var aAway = awayFuoriCasa ?? 0m;
                        var aDraw = awayDraw      ?? 0m;
                        var aWin  = awayWon       ?? 0m;
                        pronShotsAway = (aEff + aAway + aDraw + aWin) / 4m;
