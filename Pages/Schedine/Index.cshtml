                                <span class="badge bg-success ms-1">PUBBLICA</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark ms-1">PRIVATA</span>
                            }

                            @if (s.Result == NextStakeWebApp.Models.BetSlip.BetSlipResult.Win)
