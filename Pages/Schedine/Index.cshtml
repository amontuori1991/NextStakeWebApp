                                <span class="badge bg-danger ms-1">Perdente</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary ms-1">Archiviata</span>
                            }

                            @if (s.AutoArchived)
                            {
                                <span class="badge bg-secondary ms-1">Auto</span>
                            }
                            <form method="post"
