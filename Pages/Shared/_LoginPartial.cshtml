@using Microsoft.AspNetCore.Identity
@using NextStakeWebApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Ciao, @User.Identity?.Name</span>
        </li>
        @if (User.IsInRole("SuperAdmin"))
        {
            <li class="nav-item">
                <a class="nav-link text-danger" asp-area="Admin" asp-page="/Index">SuperAdmin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Admin" asp-page="/Users/Index">Utenti</a>
            </li>

        }
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post" asp-route-returnUrl="~/">
                <button type="submit" class="nav-link btn btn-link text-dark">Esci</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Accedi</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registrati</a>
        </li>
    }
</ul>
