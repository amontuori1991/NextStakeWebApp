﻿@using NextStakeWebApp.Data
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NextStake</title>

    <!-- ICONA PRINCIPALE SVG -->
    <link rel="icon" type="image/svg+xml" href="~/icons/favicon.svg">

    <!-- Fallback raster per browser vecchi -->
    <link rel="icon" type="image/png" sizes="32x32" href="~/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/icons/favicon-16x16.png">
    <link rel="icon" type="image/x-icon" href="~/icons/favicon.ico">

    <!-- PWA / Mobile -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/icons/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="~/icons/android-chrome-512x512.png">

    <link rel="manifest" href="/site.webmanifest">


    <!-- Safari pinned tab -->
    <link rel="mask-icon" href="~/icons/favicon.svg" color="#000000">

    <meta name="theme-color" content="#ffffff">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="NextStake">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NextStakeWebApp.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Events/Index">NextStake</a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Events/Index">Eventi</a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Schedine/Index">Le mie schedine</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Community/Index">Community</a>
                            </li>
                        }

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Feedback/Index">Invia il tuo feedback</a>
                            </li>
                        }


                        @{
                            var isSignedIn = User?.Identity?.IsAuthenticated ?? false;

                            bool hasPlan1 = isSignedIn && User.HasClaim(c =>
                            (string.Equals(c.Type, "plan", StringComparison.OrdinalIgnoreCase) ||
                            string.Equals(c.Type, "Plan", StringComparison.OrdinalIgnoreCase)) &&
                            string.Equals((c.Value ?? "").Trim(), "1", StringComparison.Ordinal));

                            // Se vuoi che anche chi è SuperAdmin li veda comunque, usa:
                            // bool showAdminMenu = hasPlan1 || User.IsInRole("SuperAdmin");
                            // Se invece vuoi SOLO plan=1, usa direttamente hasPlan1:
                            bool showAdminMenu = hasPlan1;
                        }


                        @if (showAdminMenu)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-page="/Users/Index">Utenti</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-area="Admin" asp-page="/Index">SuperAdmin</a>
                            </li>
                            @* Voce visibile SOLO al ruolo SuperAdmin *@
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-area="Admin" asp-page="/ConsumiApi">
                                        Consumi API
                                    </a>
                                </li>
                            }

                        }

                    </ul>

                    <!-- Login / Register / Logout -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <div class="text-center mb-4">
            <img src="~/icons/favicon.svg"
                 alt="NextStake Logo"
                 style="width: 250px; height: auto;" />

        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NextStakeWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div id="snow-container"></div>

    <style>
        #snow-container {
            pointer-events: none;
            position: fixed;
            inset: 0;
            z-index: 9999;
            overflow: hidden;
        }

        .snowflake {
            position: absolute;
            top: -10px;
            color: white;
            font-size: 1rem;
            user-select: none;
            animation: fall linear infinite;
            opacity: 0.9;
            filter: drop-shadow(0 0 3px rgba(255,255,255,0.6));
        }

        @@keyframes fall {
            to

        {
            transform: translateY(110vh);
        }

        }

        /* 🔻 Su mobile: fiocchi più leggeri (niente drop-shadow, più piccoli) */
        @@media (max-width: 768px) {
            .snowflake

        {
            filter: none;
            font-size: 0.8rem;
        }

        }

        /* 🔻 Opzionale: niente animazione per chi ha "riduci movimento" */
        @@media (prefers-reduced-motion: reduce) {
            .snowflake

        {
            animation: none !important;
        }

        }
    </style>


    <script>
        (function () {
            // Di base 50 fiocchi (desktop/tablet)
            let SNOW_COUNT = 50;

            // Su viewport piccole (smartphone) riduci drasticamente
            if (window.matchMedia('(max-width: 768px)').matches) {
                SNOW_COUNT = 15; // prova con 10–15
            }

            const container = document.getElementById('snow-container');
            if (!container) return;

            for (let i = 0; i < SNOW_COUNT; i++) {
                createSnowflake();
            }

            function createSnowflake() {
                const flake = document.createElement('div');
                flake.className = 'snowflake';
                flake.textContent = '❄';

                const size = Math.random() * 12 + 8; // 8px - 20px
                flake.style.fontSize = size + 'px';

                flake.style.left = Math.random() * 100 + 'vw';
                flake.style.animationDuration = (Math.random() * 10 + 10) + 's';
                flake.style.opacity = Math.random();
                flake.style.transform = `translateX(${Math.random() * 40 - 20}px)`;

                container.appendChild(flake);

                flake.addEventListener('animationend', () => {
                    flake.remove();
                    createSnowflake();
                });
            }
        })();
    </script>


</body>
</html>