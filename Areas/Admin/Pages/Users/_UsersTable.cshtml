@model List<NextStakeWebApp.Areas.Admin.Pages.Users.IndexModel.AdminUserViewModel>

<div class="table-responsive">
    <table class="table table-sm table-striped align-middle">
        <thead>
            <tr>
                <th>Email</th>
                <th>Piano</th>
                <th>Scadenza</th>
                <th>Stato</th>
                <th>Approvato</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.Plan</td>
                        <td>
                            @(user.PlanExpiresAtDisplay ?? "∞")
                        </td>
                        <td>
                            @switch (user.Status)
                            {
                                case "Attivo":
                                    <span class="badge bg-success status-badge">Attivo</span>
                                    break;
                                case "In scadenza":
                                    <span class="badge bg-warning text-dark status-badge">In scadenza</span>
                                    break;
                                default:
                                    <span class="badge bg-danger status-badge">Scaduto</span>
                                    break;
                            }
                        </td>
                        <td>
                            @if (user.IsApproved)
                            {
                                <span class="badge bg-success">Sì</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td class="text-nowrap">
                            <!-- Approva/Blocca -->
                            <form method="post"
                                  action="/Admin/Users?handler=ToggleApproval&id=@user.Id"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    @(user.IsApproved ? "Blocca" : "Approva")
                                </button>
                            </form>

                            <!-- Cambio Piano -->
                            <form method="post"
                                  action="/Admin/Users?handler=ChangePlan&id=@user.Id"
                                  class="d-inline ms-1">
                                @Html.AntiForgeryToken()
                                <select name="plan" class="form-select form-select-sm d-inline w-auto align-middle">
                                    @foreach (var p in Enum.GetNames(typeof(NextStakeWebApp.Models.SubscriptionPlan)))
                                    {
                                        <option value="@p" selected="@(p == user.Plan)">@p</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-outline-primary ms-1">Cambia</button>
                            </form>

                            <!-- Modifica Scadenza (data o ∞) -->
                            <form method="post"
                                  action="/Admin/Users?handler=ChangeExpiry&id=@user.Id"
                                  class="d-inline ms-1">
                                @Html.AntiForgeryToken()
                                <input type="date"
                                       name="expiryDate"
                                       class="form-control form-control-sm d-inline w-auto align-middle"
                                       value="@(user.PlanExpiresAtLocalYmd ?? "")" />
                                <div class="form-check form-check-inline ms-1 align-middle">
                                    <input class="form-check-input" type="checkbox" name="infinite" value="true" @(user.IsInfinite ? "checked" : "") />
                                    <label class="form-check-label">∞</label>
                                </div>
                                <button type="submit" class="btn btn-sm btn-outline-warning ms-1">Salva scadenza</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Nessun utente in questa sezione.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
