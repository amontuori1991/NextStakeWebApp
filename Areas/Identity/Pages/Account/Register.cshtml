@page
@model NextStakeWebApp.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrati";
}

@section Styles {
    <text>
        <style>
            /* Tela base */
            body {
                background: linear-gradient(135deg, #252e40 0%, #1a2230 100%);
                color: #fff;
                font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
            }

            .ns-reg-wrapper {
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 2rem;
            }

            /* Card più larga */
            .ns-reg-card {
                background: rgba(255,255,255,0.06);
                border: 1px solid rgba(255,255,255,0.18);
                backdrop-filter: blur(8px);
                -webkit-backdrop-filter: blur(8px);
                width: 100%;
                max-width: 860px;
                border-radius: 18px;
                padding: 2.25rem;
                box-shadow: 0 20px 60px rgba(0,0,0,.35);
                animation: fadeUp .5s ease-out forwards;
                opacity: 0;
                transform: translateY(10px);
            }

            .ns-reg-header {
                text-align: center;
                margin-bottom: 1.25rem;
            }

            .ns-reg-logo {
                width: 300px;
                height: auto;
                display: inline-block;
                padding: 12px;
                border-radius: 18px;
                background: rgba(255,255,255,0.05);
                box-shadow: 0 4px 20px rgba(0,0,0,.4);
                margin-bottom: .75rem;
            }

            .ns-reg-title {
                font-size: 2.2rem;
                font-weight: 800;
                margin: .25rem 0 .25rem;
            }

            .ns-reg-sub {
                color: rgba(255,255,255,.75);
                margin: 0 0 .5rem;
            }

            /* Griglia a 2 colonne su desktop, 1 su mobile */
            .ns-grid {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 16px 20px;
                margin-top: .5rem;
            }
            @@media (max-width: 768px) {
                .ns-reg-card

            {
                padding: 1.25rem;
            }

            .ns-grid {
                grid-template-columns: 1fr;
            }

            .ns-reg-logo {
                width: 150px;
            }

            }

            /* Campi */
            .ns-field {
                display: flex;
                flex-direction: column;
            }

            .ns-label {
                font-size: .95rem;
                color: rgba(255,255,255,.8);
                margin-bottom: .35rem;
            }

            .ns-input {
                background: rgba(255,255,255,.12);
                border: 1px solid rgba(255,255,255,.22);
                color: #fff;
                border-radius: 10px;
                height: 56px;
                padding: 14px 14px;
                font-size: 1.05rem;
                outline: none;
                transition: all .15s ease;
            }

                .ns-input::placeholder {
                    color: rgba(255,255,255,.6);
                }

                .ns-input:focus {
                    border-color: #00c3ff;
                    box-shadow: 0 0 0 4px rgba(0,195,255,.23);
                }

            .ns-validation {
                font-size: .9rem;
                margin-top: .35rem;
            }

            /* Bottoni & link */
            .ns-submit {
                background: #00c3ff;
                color: #fff;
                border: none;
                display: inline-block;
                width: 100%;
                border-radius: 10px;
                padding: 14px 16px;
                font-size: 1.1rem;
                font-weight: 700;
                transition: transform .12s ease, background-color .12s ease, box-shadow .12s ease;
            }

                .ns-submit:hover {
                    background: #00a8db;
                    transform: translateY(-1px);
                }

            .ns-links {
                text-align: center;
                margin-top: 10px;
            }

            .ns-link {
                color: #00bfff;
                text-decoration: underline;
            }

                .ns-link:hover {
                    color: #66d0ff;
                }

            @@keyframes fadeUp {
                to

            {
                opacity: 1;
                transform: translateY(0);
            }

            }
        </style>
    </text>
}

<div class="ns-reg-wrapper">
    <div class="ns-reg-card">
        <div class="ns-reg-header">
            <img src="~/icons/favicon.svg" alt="NextStake Logo" class="ns-reg-logo" />
            <div class="ns-reg-title">Registrati</div>
            <div class="ns-reg-sub">Crea il tuo account NextStake</div>
        </div>

        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Griglia 2 colonne -->
            <div class="ns-grid">
                <div class="ns-field">
                    <label asp-for="Input.Email" class="ns-label">Email</label>
                    <input asp-for="Input.Email" class="ns-input" placeholder="email@dominio.com" />
                    <span asp-validation-for="Input.Email" class="text-danger ns-validation"></span>
                </div>

                <div class="ns-field">
                    <label asp-for="Input.UserName" class="ns-label">Nome utente</label>
                    <input asp-for="Input.UserName" class="ns-input" autocomplete="username" placeholder="Il tuo nome utente" />
                    <span asp-validation-for="Input.UserName" class="text-danger ns-validation"></span>
                </div>

                <div class="ns-field">
                    <label asp-for="Input.Password" class="ns-label">Password</label>
                    <input asp-for="Input.Password" class="ns-input" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger ns-validation"></span>
                </div>

                <div class="ns-field">
                    <label asp-for="Input.ConfirmPassword" class="ns-label">Conferma password</label>
                    <input asp-for="Input.ConfirmPassword" class="ns-input" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger ns-validation"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="ns-submit">Crea account</button>
            </div>

            <div class="ns-links">
                <span class="text-light small">
                    Hai già un account?
                    <a asp-page="./Login" class="ns-link fw-semibold">Accedi qui</a>
                </span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
